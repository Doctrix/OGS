<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.VisitUserProfileActivity">

    <data>

        <variable
            name="DataUser"
            type="fr.oxygames.app.binding.DataUser" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/cover_display"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/label_todo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_cover">

                </ImageView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_display"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_avatar"
                    app:civ_circle_background_color="@color/colorProfile">

                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/username_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image_display"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/label_username"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv1"
            android:layout_marginTop="40dp"
            android:background="@color/colorProfile"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/facebook_display"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/label_todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_fb">

            </ImageView>

            <ImageView
                android:id="@+id/inst_display"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginEnd="35dp"
                android:contentDescription="@string/label_todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_inst">

            </ImageView>

            <ImageView
                android:id="@+id/website_display"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:contentDescription="@string/label_todo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_website">

            </ImageView>

        </LinearLayout>

        <Button
            android:id="@+id/send_msg_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout_display"
            android:layout_marginTop="20dp"
            android:background="@color/colorProfile"
            android:text="@string/label_send_message"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp">

        </Button>

    </RelativeLayout>
</layout>